<p class="col-sm-10 row">
  <strong class="col-sm-3 row">Type:</strong>
  <%= @workout.type_workout %>
</p>

<p class="col-sm-10 row">
  <strong class="col-sm-3 row">Duration:</strong>
  <%= @workout.duration %>
</p>

<p class="col-sm-10 row">
  <strong class="col-sm-3 row">Calories:</strong>
  <%= @workout.calories %>
</p>

<p class="col-sm-10 row">
  <strong class="col-sm-3 row">User:</strong>
  <%= @workout.user_id %>
</p>

<%= link_to 'Edit', edit_workout_path(@workout), class: "btn btn-primary", role: "button" %>
<%= link_to 'Back', workouts_path, class: "btn btn-primary", role: "button" %>
