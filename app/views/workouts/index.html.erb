<h1>Workouts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Duration</th>
      <th>Calories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.type_workout %></td>
        <td><%= workout.duration %></td>
        <td><%= workout.calories %></td>
        <td><%= link_to 'Show', workout, class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout), class: "btn btn-primary", role: "button" %></td>
        <td><%= link_to 'Destroy', workout, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary", role: "button" %></td>
      </tr>
    <% end %>
    <tr>
        <td>Totals</td>
        <td><%= @workouts.total_calories %></td>
        <td><%= @workouts.total_duration %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Workout', new_workout_path, class: "btn btn-primary", role: "button" %>
